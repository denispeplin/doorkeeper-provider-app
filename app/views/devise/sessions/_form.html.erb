<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t(:sign_in), :class => "btn btn-primary" %>
    <%= t :or %>
    <%=link_to t(:sign_up), users_sign_up_path, :class => "btn" %>
  </div>
<% end %>
